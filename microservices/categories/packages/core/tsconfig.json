{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src/",
    "outDir": "./dist",
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es6"],                             
    "rootDir": "./src",                       
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                          
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
  },
  "include": [
    "./src/**/*"
  ]
}
